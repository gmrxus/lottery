    <LinearLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <com.zzrh.lottery.ui.FocusRelativeLayout
                android:id="@+id/rl_qrcode_login"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:focusable="true"
                android:gravity="center"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_1"
                    android:layout_alignBottom="@id/tv_1"
                    android:src="@mipmap/login" />

                <com.zzrh.lottery.ui.FocusTextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iv_1"
                    android:layout_toRightOf="@id/iv_1"
                    android:text="扫码登录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ts_text_btn" />
            </com.zzrh.lottery.ui.FocusRelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:gravity="center">

            <com.zzrh.lottery.ui.FocusRelativeLayout
                android:id="@+id/rl_qrcode_regist"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:focusable="true"

                android:gravity="center"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/iv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_2"
                    android:layout_alignBottom="@id/tv_2"
                    android:src="@mipmap/register" />

                <com.zzrh.lottery.ui.FocusTextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iv_2"
                    android:layout_toRightOf="@id/iv_2"
                    android:text="扫码注册"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ts_text_btn" />
            </com.zzrh.lottery.ui.FocusRelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <com.zzrh.lottery.ui.FocusRelativeLayout
                android:id="@+id/rl_qrcode_help"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:focusable="true"
                android:gravity="center"

                android:padding="12dp">

                <ImageView
                    android:id="@+id/iv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_3"
                    android:layout_alignBottom="@id/tv_3"
                    android:src="@mipmap/choose" />

                <com.zzrh.lottery.ui.FocusTextView
                    android:id="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iv_3"
                    android:layout_toRightOf="@id/iv_3"
                    android:text="选号助手"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ts_text_btn" />
            </com.zzrh.lottery.ui.FocusRelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <com.zzrh.lottery.ui.FocusRelativeLayout
                android:id="@+id/rl_reset_password"
                android:layout_width="wrap_content"
                android:layout_height="80dp"

                android:focusable="true"
                android:gravity="center"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/iv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_4"
                    android:layout_alignBottom="@id/tv_4"
                    android:src="@mipmap/revis" />

                <com.zzrh.lottery.ui.FocusTextView
                    android:id="@+id/tv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iv_4"
                    android:layout_toRightOf="@id/iv_4"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="修改密码"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ts_text_btn" />
            </com.zzrh.lottery.ui.FocusRelativeLayout>

        </RelativeLayout>
    </LinearLayout>
